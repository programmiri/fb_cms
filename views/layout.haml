!!! 5
%meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
%html{:lang => "en", :class => "no-js"}
  %head
    %link{ :type => "text/css", :rel => "stylesheet", :href => "http://fonts.googleapis.com/css?family=Kreon" }/
    %meta{ :charset => "utf-8" }/
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %meta{ :name => "viewport", :content => "width=device-width;" }/

    %title= @meta_title
    %meta{ :name => "description", :content => @meta_description }/

    %meta{:content => "#{settings.site_url}", :name => "author"}/
    %meta{:content => "de", :name => "language"}/

    %meta{ :property => "og:title", :content => @meta_title }
    %meta{ :property => "og:description", :content => @meta_description }
    %meta{ :property => "og:language", :content => "de" }
    %meta{ :property => "og:site_name", :content => "fb_cms" }
    %meta{ :property => "og:type", :content => "non_profit" }
    %meta{ :property => "og:image", :content => "#{settings.site_url}/apple-touch-icon-114x114-precomposed.png" }
    %meta{ :property => "fb:admins", :content => settings.facebook['admin_id'] }

    %link{ :rel => 'stylesheet', :type => 'text/css', :href => url('stylesheets/style.css') }

    %script{ :type => 'text/javascript', :src =>  url('javascripts/libs/modernizr-2.0.6.min.js') }
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '#{settings.google['analytics']}']);
      _gaq.push(['_setDomainName', '#{settings.site_url}']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();    
  %body
    -# auch ein kommentar
    #container
      %header
        %a.logo{:href => url("/"), :title => "Hundetraining Teamarbeit"}
          %img{:src => url("/images/logo_hundetraining_teamarbeit.png")}
        %nav#mainnav
          %ul
            %li
              %a{:href => url("/"), :title => "Startseite"} Start
            %li
              %a{:href => url("/ueberuns"), :title => "Über uns"} Über uns
            %li
              %a{:href => url("/termine"), :title => "Termine" } Termine
            %li
              %a{:href => url("/bilder"), :title => "Bilder"} Bilder
            %li
              %a{:href => url("/kontakt"), :title => "Kontakt"} Kontakt


      #content{ :role => "main" }
        = yield
        .clear

      %footer
        .like_box
          :plain
            <iframe src="http://www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2F#{URI.escape(settings.facebook['fb_page_path'])}&amp;width=780&amp;colorscheme=light&amp;show_faces=true&amp;border_color=%23e2e2e2&amp;stream=false&amp;header=false&amp;height=258" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:780px; height:258px;" allowTransparency="true"></iframe>

        #infos_bottom
          .lefti.floatleft
            %a{:href= => "http://caneami.de/", :title => "Hundeschule CaneAmi"}
              %img{:src => url("/images/caneami.jpg")}
            %p 
            Esther Follmann ⋅ Mühlbachstr. 7 ⋅ 67435 Neustadt/Weinstrasse
          .righti.floatright
            %a{:href= => "http://cavecani.de/", :title => "Hundeschule CaveCani"}
              %img{:src => url("/images/cavecani.png")}
            %p 
            Mirjam Aulbach ⋅ Hinter der Altdörfer Kirche 30A ⋅ 64832 Babenhausen 
          .clear

    %script{ :src => '//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js' }
    -# fall back to local jQuery if necessary
    :javascript
      window.jQuery || document.write("<script src='/javascripts/libs/jquery.min.js'>\x3C/script>")
    = javascript_includes      