    %h2.h3 Statusupdates

    - posts.each do |post|
      %article.fb_feed
        .fb_feed_date.floatleft
          %time{ :datetime => post.upated_at.iso8601 }
            %span.feed_day_month= I18n.l(post.upated_at, :format => "%d.&nbsp;%b")
            %span.feed_year= I18n.l(post.upated_at, :format => "%Y")
        - if post.data["picture"]
          %a{ :href => " #{post.data["link"]}", :title => " #{ nl2delete(deletelink post.message) } "}
            %img.floatright.postpicture{ :src => post.picture, :alt => " #{ nl2delete(deletelink post.message) } ",  :title => " #{ nl2delete(deletelink post.message) } " }
        - if post.data["name"]
          %p= linkify_feed(post.message, post.name)
        - else
          %p= nl2br(linkify_short(post.message))
        .clear
        %hr
